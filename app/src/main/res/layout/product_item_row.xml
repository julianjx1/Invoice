<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>
        <variable
            name="product"
            type="com.invoice.bd.model.Product" />

    </data>
    <TableRow android:id="@+id/product_item_row"
        android:background="#DAE8FC"
        android:padding="5dp"
      >
        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="@{product.product_name}" />
        <TextView
            android:id="@+id/product_item_brand_name"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="@{product.category_name}" />
        <TextView
            android:id="@+id/product_item_rate"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="@{product.purchase_rate}" />
        <TextView
            android:id="@+id/price"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="@{product.price}" />
        <TextView
            android:id="@+id/stock"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"
            android:text="@{product.stock}" />



    </TableRow>
</layout>
